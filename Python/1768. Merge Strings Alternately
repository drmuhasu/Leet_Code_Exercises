class Solution:
    def mergeAlternately(self, word1: str, word2: str) -> str:
        
        length = len(word1) + len(word2)
        str3 = ''

        for i in range(length):
            if i < len(word1):
                str3 += word1[i]
            if i < len(word2):
                str3 += word2[i]
        return str3
